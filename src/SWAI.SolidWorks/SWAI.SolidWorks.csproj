<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>SWAI.SolidWorks</RootNamespace>
    <AssemblyName>SWAI.SolidWorks</AssemblyName>
    <Description>SolidWorks COM API abstraction layer for SWAI</Description>
    <UseWindowsForms>true</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SWAI.Core\SWAI.Core.csproj" />
  </ItemGroup>

  <!-- 
