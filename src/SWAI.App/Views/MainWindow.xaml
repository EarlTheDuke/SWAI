<Window x:Class="SWAI.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SWAI - SolidWorks AI Assistant" 
        Height="750" Width="1100"
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        
        <!-- Preview Action Item Template -->
        <DataTemplate x:Key="PreviewActionTemplate">
            <Border Background="{StaticResource CardBrush}" CornerRadius="6" Padding="10,8" Margin="0,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="{Binding Icon}" FontSize="16" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <StackPanel Grid.Column="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding TypeName}" FontWeight="SemiBold" 
                                       Foreground="{StaticResource AccentBrush}" FontSize="12"/>
                            <TextBlock Text=" â€¢ " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <TextBlock Text="{Binding Description}" 
                                       Foreground="{StaticResource TextPrimaryBrush}" FontSize="12"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Parameters}" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Visibility="{Binding Parameters, Converter={StaticResource NullToVisibility}}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ConfidenceDisplay}" FontSize="11"
                                   Foreground="{StaticResource SuccessBrush}" Margin="8,0"/>
                        <Ellipse Width="8" Height="8" Fill="{StaticResource WarningBrush}"
                                 Visibility="{Binding HasWarnings, Converter={StaticResource BoolToVisibility}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â—†" FontSize="24" Foreground="{StaticResource PrimaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="SWAI" FontSize="20" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="SolidWorks AI Assistant" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Provider Info -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,16,0">
                    <TextBlock Text="AI: " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text="{Binding CurrentProvider}" FontSize="11" 
                               Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                </StackPanel>

                <!-- Connection Status -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="10" Height="10" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource WarningBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <Button Content="Connect" Margin="12,0,0,0" 
                            Command="{Binding ConnectCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Visibility="{Binding ShowConnectButton, Converter={StaticResource BoolToVisibility}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Chat Panel -->
            <Border Grid.Column="0" Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Messages -->
                    <ScrollViewer Grid.Row="0" 
                                  x:Name="MessagesScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Messages}" Margin="0,8">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource CardBrush}"/>
                                                <Setter Property="CornerRadius" Value="12,12,12,0"/>
                                                <Setter Property="Padding" Value="12,8"/>
                                                <Setter Property="Margin" Value="8,4,80,4"/>
                                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                                <Setter Property="MaxWidth" Value="600"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsUser}" Value="True">
                                                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                        <Setter Property="CornerRadius" Value="12,12,0,12"/>
                                                        <Setter Property="Margin" Value="80,4,8,4"/>
                                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsError}" Value="True">
                                                        <Setter Property="Background" Value="#4D4D4D"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                        <Setter Property="Background" Value="#4D3D00"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsApiPreview}" Value="True">
                                                        <Setter Property="Background" Value="#1A2634"/>
                                                        <Setter Property="BorderBrush" Value="#4A9EFF"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="MaxWidth" Value="800"/>
                                                        <Setter Property="Margin" Value="8,4,30,4"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsPreview}" Value="True">
                                                        <Setter Property="Background" Value="#2D3748"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="MaxWidth" Value="700"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Content}" 
                                                       TextWrapping="Wrap"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14"
                                                       FontFamily="Consolas"
                                                       Visibility="{Binding IsPreview, Converter={StaticResource BoolToVisibility}}"/>
                                            <TextBlock Text="{Binding Content}" 
                                                       TextWrapping="Wrap"
                                                       Foreground="{StaticResource TextPrimaryBrush}"
                                                       FontSize="14">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsPreview}" Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Timestamp, StringFormat='{}{0:HH:mm}'}" 
                                                       FontSize="10"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Right"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Preview Confirmation Panel -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="8" Margin="8,4" Padding="12"
                            Visibility="{Binding ShowPreviewConfirmation, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Command Preview" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Text="Confidence: " FontSize="12" 
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding PreviewConfidence}" FontSize="12" 
                                               Foreground="{StaticResource SuccessBrush}" FontWeight="SemiBold"/>
                                    <TextBlock Text=" | Risk: " FontSize="12" 
                                               Foreground="{StaticResource TextSecondaryBrush}" Margin="8,0,0,0"/>
                                    <TextBlock Text="{Binding PreviewRisk}" FontSize="12" 
                                               FontWeight="SemiBold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PreviewRisk}" Value="Medium">
                                                        <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PreviewRisk}" Value="High">
                                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding PreviewRisk}" Value="Critical">
                                                        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Action List -->
                            <ItemsControl ItemsSource="{Binding PreviewActions}" 
                                          ItemTemplate="{StaticResource PreviewActionTemplate}"
                                          MaxHeight="200">
                                <ItemsControl.Template>
                                    <ControlTemplate>
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                                      HorizontalScrollBarVisibility="Disabled">
                                            <ItemsPresenter/>
                                        </ScrollViewer>
                                    </ControlTemplate>
                                </ItemsControl.Template>
                            </ItemsControl>
                            
                            <!-- Warnings -->
                            <ItemsControl ItemsSource="{Binding PreviewWarnings}" Margin="0,8,0,0"
                                          Visibility="{Binding HasPreviewWarnings, Converter={StaticResource BoolToVisibility}}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Margin="0,2">
                                            <TextBlock Text="âš ï¸ " FontSize="12"/>
                                            <TextBlock Text="{Binding}" FontSize="12" 
                                                       Foreground="{StaticResource WarningBrush}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <!-- Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                                <Button Content="Cancel" Command="{Binding CancelPreviewCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" MinWidth="80"/>
                                <Button Content="Edit" Command="{Binding EditPreviewCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0" MinWidth="80"/>
                                <Button Content="Execute" Command="{Binding ExecutePreviewCommand}"
                                        Style="{StaticResource PrimaryButtonStyle}" MinWidth="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Input Area -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" 
                            CornerRadius="8" Margin="8" Padding="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Preview Mode Toggle -->
                            <ToggleButton Grid.Column="0" Content="ðŸ“‹" ToolTip="Preview Mode"
                                          IsChecked="{Binding PreviewModeEnabled}"
                                          Style="{StaticResource ToggleButtonStyle}"
                                          Margin="4,0,8,0" Width="32" Height="32"/>

                            <TextBox Grid.Column="1" 
                                     x:Name="InputTextBox"
                                     Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ChatInputStyle}"
                                     AcceptsReturn="False"
                                     TextWrapping="Wrap"
                                     MaxHeight="100"
                                     VerticalScrollBarVisibility="Auto">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>

                            <Button Grid.Column="2" 
                                    Content="Send" 
                                    Command="{Binding SendCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="8,0,4,0"
                                    MinWidth="70"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Side Panel -->
            <Border Grid.Column="1" Width="300" Background="{StaticResource SurfaceBrush}" 
                    Margin="0,8,8,8" CornerRadius="8" Padding="12">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Part Info Section -->
                        <StackPanel Visibility="{Binding HasActivePart, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="Current Part" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,12"/>
                            
                            <TextBlock Text="{Binding ActivePartName}" FontSize="14" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            
                            <Separator Margin="0,12" Background="{StaticResource CardBrush}"/>
                            
                            <TextBlock Text="Features" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            
                            <ItemsControl ItemsSource="{Binding PartFeatures}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="12" 
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   Margin="0,2"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Separator Margin="0,12" Background="{StaticResource CardBrush}"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Content="Save" Command="{Binding SaveCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                                <Button Content="Export" Command="{Binding ExportCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Preview History Section -->
                        <StackPanel Margin="0,16,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Preview History" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <Button Grid.Column="1" Content="Clear" FontSize="10"
                                        Command="{Binding ClearHistoryCommand}"
                                        Style="{StaticResource LinkButtonStyle}"/>
                            </Grid>
                            
                            <ItemsControl ItemsSource="{Binding PreviewHistory}" Margin="0,8,0,0">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource CardBrush}" CornerRadius="4" 
                                                Padding="8" Margin="0,4" Cursor="Hand"
                                                MouseLeftButtonDown="PreviewHistoryItem_Click">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Summary}" FontSize="11" 
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                                    <TextBlock Text="{Binding GeneratedAt, StringFormat='{}{0:HH:mm}'}" 
                                                               FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text=" â€¢ " FontSize="10" 
                                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock FontSize="10">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Pending"/>
                                                                <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsExecuted}" Value="True">
                                                                        <Setter Property="Text" Value="Executed"/>
                                                                        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsCancelled}" Value="True">
                                                                        <Setter Property="Text" Value="Cancelled"/>
                                                                        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        <!-- Settings Section -->
                        <StackPanel Margin="0,16,0,0">
                            <TextBlock Text="Preview Settings" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,8"/>
                            
                            <CheckBox Content="Show detailed preview" 
                                      IsChecked="{Binding AlwaysShowDetailedPreview}"
                                      Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                            <CheckBox Content="Auto-execute low-risk commands" 
                                      IsChecked="{Binding AutoExecuteLowRisk}"
                                      Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,4,0,0"/>
                            
                            <ComboBox ItemsSource="{Binding PreviewModes}" 
                                      SelectedItem="{Binding SelectedPreviewMode}"
                                      Margin="0,8,0,0" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Mock Mode Banner -->
                <Border Grid.Column="0" Background="#4CAF50" CornerRadius="4" Padding="8,4" Margin="0,0,12,0"
                        Visibility="{Binding IsMockMode, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="ðŸ”§ MOCK MODE" FontSize="11" FontWeight="Bold" Foreground="White"/>
                </Border>

                <TextBlock Grid.Column="1" Text="{Binding StatusMessage}" 
                           Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Mode: " Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                    <TextBlock Text="{Binding OperationMode}" 
                               Foreground="{StaticResource AccentBrush}" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
